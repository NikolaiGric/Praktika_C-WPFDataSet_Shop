<Window x:Class="Пятерочка.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Пятерочка"
        mc:Ignorable="d"
        Title="Авторизация" Height="400" Width="450" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="AllDataGrid"/>
        <TextBox x:Name="LoginTbx" Grid.Row="0" VerticalAlignment="Center" 
                 FontSize="26" 
                 BorderBrush="{x:Null}"
                 Background="#FFF6F6F6"
                 materialDesign:HintAssist.Hint="Логин"/>
        <PasswordBox x:Name="PasswordTbx" Grid.Row="1" VerticalAlignment="Center" 
                 FontSize="26" 
                 BorderBrush="{x:Null}"
                 Background="#FFF6F6F6"
                 materialDesign:HintAssist.Hint="Пароль"/>
        <Button Grid.Row="2" Content="Авторизироваться" Click="Button_Click" 
                FontSize="20" Style="{StaticResource MaterialDesignRaisedLightButton}" />
    </Grid>
</Window>
